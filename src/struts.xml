<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.enable.DynamicMethodInvocation"
		value="false" />
	<constant name="struts.devMode" value="true" />

	<package name="default" extends="struts-default">

		<result-types>
			<result-type name="freemarker"
				class="org.apache.struts2.views.freemarker.FreemarkerResult"
				default="true" />
		</result-types>

		<action name="listLink" class="ListLinkAction">
			<result name="success">/listLink.ftl</result>
		</action>

		<action name="faqs" class="FaqListAction">
			<result name="success">/faq_list.ftl</result>
		</action>

		<action name="faq_*" method="{1}"
			class="FaqAction">
			<result name="success" type="redirect-action">faqs</result>
			<result name="input">/faq_input.ftl</result>
			<result name="error">/onError.ftl</result>
		</action>

		<!-- 
			<action name="list_post" class="gbook.action.ListPostAction">
			<result name="success">/list_post.ftl</result>
			</action>
			
			<action name="list_reply" class="gbook.action.ListReplyAction">
			<result name="success">/list_reply.ftl</result>
			<result name="input" type="redirect-action">list_post</result>
			</action>
			
			<action name="add_reply_*" method="{1}" class="gbook.action.DoReplyAction">
			<result name="success">/add_reply_result.ftl</result>
			<result name="input">/add_reply.ftl</result>
			<result name="error" type="redirect-action">list_post</result>
			</action>
		-->

	</package>
</struts>
